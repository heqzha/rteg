from __future__ import division
import math

class PolyPoint:
	def __init__(self, iX, iY):
		self.mX = iX
		self.mY = iY

class PolyShape:
	def __init__(self, iVertex = 3, iRadius = 10):
		self.mVertex = iVertex
		self.mRadius = iRadius
		self.mPoints = []
	
	def generate(self):
